<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <%= yield %>
    <div id="content">
      <div id="login_logout">
        <% if @current_user %>
          Logged in as:
          <%= @current_user.name %>
          <em><%= link_to "(Logout)", 'http://localhost:3000',
                          method: :delete %></em>
        <% else %>
          <em>Not logged in.</em>
          <%= link_to 'Login', new_session_path %>
        <% end %>
      </div>
    </div>
  </body>
</html>
